{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/samples/KK.AspNetCore.Images.Samples.Web/KK.AspNetCore.Images.Samples.Web.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "-o",
                ".\\Publish",
                "-r",
                "win-x64"
            ],
            "options": {
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Production"
                },
                "cwd": "${workspaceFolder}/samples/KK.AspNetCore.Images.Samples.Web"
            },
            "problemMatcher": []
        },
        {
            "label": "parcel watch",
            "type": "npm",
            "script": "parcel:watch",
            "path": "samples/KK.AspNetCore.Images.Samples.Web/ClientApp/",
            "options": {
                "cwd": "samples/KK.AspNetCore.Images.Samples.Web/ClientApp/"
            },
            "problemMatcher": []
        }
    ]
}
