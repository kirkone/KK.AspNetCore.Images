{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ImageProcessing": {
    "TargetFolder": "images/generated",
    "LosslessCompress": true,
    "WriteMetaFiles": true,
    "OutputFormats": [
      {
        "FileEndings": [ "jpg" ],
        "Options": {
          "Progressive": true
        }
      },
      {
        "FileEndings": [ "webp" ],
        "Options": {
        }
      }
    ],
    "Sizes": [
      {
        "Width": 200,
        "Quality": 55
      },
      {
        "Width": 450,
        "Quality": 70
      },
      {
        "Width": 600,
        "Quality": 80
      },
      {
        "Width": 750,
        "Progressive": false,
        "Quality": 95
      },
      {
        "Width": 900,
        "Quality": 95
      },
      {
        "Width": 1200,
        "Quality": 80
      },
      {
        "Width": 1500,
        "Quality": 95
      },
      {
        "Width": 1800,
        "Quality": 95
      },
      {
        "Width": 2400,
        "Quality": 95
      }
    ]
  },
  "ImageTag": {
    "ImageFolder": "images/generated",
    "Settings": [
      {
        "Name": "default",
        "Fallback": "750",
        "Sizes": [
          {
            "Width": 200
          },
          {
            "Width": 450
          },
          {
            "Width": 600
          },
          {
            "Width": 750
          },
          {
            "Width": 900
          },
          {
            "Width": 1200
          },
          {
            "Width": 1500
          },
          {
            "Width": 1800
          },
          {
            "Width": 2400
          }
        ]
      }
    ]
  },
  "PictureTag": {
    "ImageFolder": "images/generated",
    "DoubbleSize": true,
    "Settings": [
      {
        "Name": "default",
        "Fallback": "750",
        "Sizes": [
          {
            "Width": 450,
            "Media": "(max-width: 450px) , (max-heigth:calc(450px / 3 * 2))",
            "Zoom": [ 2 ]
          },
          {
            "Width": 600,
            "Media": "(max-width: 600px) , (max-heigth:calc(600px / 3 * 2))",
            "Zoom": [ 2 ]
          },
          {
            "Width": 750,
            "Media": "(max-width: 750px) , (max-heigth:500px)",
            "Zoom": [ 2 ]
          },
          {
            "Width": 900,
            "Media": "(max-width: 900px)",
            "Zoom": [ 2 ]
          },
          {
            "Width": 1200,
            "Media": "(max-width: 1200px)",
            "Zoom": [ 2 ]
          },
          {
            "Width": 1500,
            "Media": "(max-width: 1500px)"
          },
          {
            "Width": 1800,
            "Media": "(max-width: 1800px)"
          },
          {
            "Width": 2400
          }
        ]
      }
    ]
  }
}
